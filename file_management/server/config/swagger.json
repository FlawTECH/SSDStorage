        "required": [
          "email",
          "fullname",
          "hashedPassword"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "email": {
            "type": "string",
            "uniqueItems": true
          },
          "fullname": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "roles": {
            "type": "array",

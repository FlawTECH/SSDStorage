      {
        "name": "Users",
        "description": "API for users in the system"
      },
      {
        "name": "Objects",
        "description": "API for objects in the system"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "securityDefinitions": {

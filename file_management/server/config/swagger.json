            "name": "id",
            "in": "path",
            "required": "true"
          },{
            "name": "groupId",
            "in": "body",
            "description": "Group's id to be include ",
            "schema": {
              "type": "object",
              "required": ["groupId"],
              "properties": {
                "groupId": {
                  "type": "string"
                }
              }
            }
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects modified OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }
      },
      "/objects/{id}/removeGroup": {
        "patch": {
          "tags": ["Objects"],
          "description": "Remove a Group from permission's list",
          "parameters": [{
            "name": "id",
            "in": "path",
            "required": "true"
          },{
            "name": "groupId",
            "in": "body",
            "description": "Group's id to be remove ",
            "schema": {
              "type": "object",
              "required": ["groupId"],
              "properties": {
                "groupId": {
                  "type": "string"
                }
              }
            }
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects modified OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }
      },
      "/objects/{id}/setGroupPermissions": {
        "patch": {
          "tags": ["Objects"],
          "description": "Set permissions to a group over the object",
          "parameters": [{
            "name": "id",
            "in": "path",
            "required": "true"
          },{
            "name": "values",
            "in": "body",
            "description": "Values to be use",
            "schema": {
              "type": "object",
              "required": ["groupId", "permissions"],
              "properties": {
                "groupId": {
                  "type": "string"
                },
                "permissions":{
                  "type": "array",
                  "items":{
                    "type":"string"
                  }
                }             
              }
            }
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects modified OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }

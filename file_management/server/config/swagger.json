              }
            }
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects modified OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }
      },
      "/objects/{id}/addGroup": {
        "patch": {
          "tags": ["Objects"],
          "description": "Add a new Group to permission's list",

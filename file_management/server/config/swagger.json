            }
          },
          "createdAt": {
            "type": "string"
          }
        }
      },
      "Users": {
        "type": "array",
        "$ref": "#/definitions/User"
      },
      "Objects": {
        "type": "array",
        "$ref": "#/definitions/Object"
      }
  }

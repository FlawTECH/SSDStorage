    "paths": {
      "/users/": {
        "get": {
          "tags": ["Users"],
          "description": "List all Users",
          "parameters": [],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Users list OK",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "/objects/": {
        "get": {
          "tags": ["Objects"],
          "description": "List all Objects",
          "parameters": [],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects list OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }
      },
      "/objects/{id}": {
        "get": {
          "tags": ["Objects"],
          "description": "List a specific Object by id",
          "parameters": [{
            "name": "id",
            "in": "path",
            "required": "true"
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects list OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }
      },
      "/objects/{id}": {
        "patch": {
          "tags": ["Objects"],
          "description": "Modify an Object",
          "parameters": [{
            "name": "id",
            "in": "path",
            "required": "true"
          },{
            "name": "values",
            "in": "body",
            "description": "Values for modify name or location",
            "schema": {
              "type": "object",
              "required": ["command"],
              "properties": {
                "command": {
                  "type": "string"
                },
                "newname": {
                  "type": "string"
                },
                "newpath": {
                  "type": "string"
                }
              }
            }
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects modified OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        },
        "delete": {
          "tags": ["Objects"],
          "description": "Delete an Object",
          "parameters": [{
            "name": "id",
            "in": "path",
            "required": "true"
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects removed OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }
      },
      "/objects/{id}/addUser": {
        "patch": {
          "tags": ["Objects"],
          "description": "Add a new User to permission's list",
          "parameters": [{
            "name": "id",
            "in": "path",
            "required": "true"
          },{
            "name": "userId",
            "in": "body",
            "description": "User's id to be include ",
            "schema": {
              "type": "object",
              "required": ["userId"],
              "properties": {
                "userId": {
                  "type": "string"
                }
              }
            }
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects modified OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }
      },
      "/objects/{id}/setUserPermissions": {
        "patch": {
          "tags": ["Objects"],
          "description": "Set permissions to an user over the object",
          "parameters": [{
            "name": "id",
            "in": "path",
            "required": "true"
          },{
            "name": "values",
            "in": "body",
            "description": "Values to be use",
            "schema": {
              "type": "object",
              "required": ["userId", "permissions"],
              "properties": {
                "userId": {
                  "type": "string"
                },
                "permissions":{
                  "type": "array",
                  "items":{
                    "type":"string"
                  }
                }             
              }
            }
          }],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Objects modified OK",
              "schema": {
                "$ref": "#/definitions/Object"
              }
            }
          }
        }
      },
      "/objects/{id}/removeUser": {
        "patch": {
          "tags": ["Objects"],
          "description": "Remove an User from permission's list",
          "parameters": [{
            "name": "id",
            "in": "path",
            "required": "true"
          },{
            "name": "userId",
            "in": "body",
            "description": "User's id to be remove ",
            "schema": {
              "type": "object",
              "required": ["userId"],
              "properties": {
                "userId": {
                  "type": "string"

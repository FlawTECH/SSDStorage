            "uniqueItems": true
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "userOwner":{
            "type": "string"
          },
          "usersAuth": {
            "type": "array",
            "items": {
                "type": "object",
                "properties":{
                  "userId": {
                    "type": "string"
                  },
                  "permissions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
            }
          },
          "groupOwner":{
            "type": "string"
          },
          "groupAuth": {
            "type": "array",
            "items": {
                "type": "object",
                "properties":{
                  "groupId": {
                    "type": "string"
                  },
                  "permissions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
